<resources>

    <!-- Base application theme. -->
    <style name="BaseTheme" parent="Theme.AppCompat.Light">
        <item name="windowActionBar">false</item>
        <item name="android:windowNoTitle">true</item>

        <!-- The new Color definitions -->
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryDark">@color/primaryDark</item>
        <item name="colorAccent">@color/primary</item>
    </style>

    <style name="CustomToolbar" parent="Theme.AppCompat">
        <item name="android:textColorPrimary">@color/txt</item>
        <item name="android:textColorPrimaryInverse">@color/txt</item>
        <item name="android:textColorSecondary">@color/txt</item>
        <item name="actionMenuTextColor">@color/txt</item>
        <item name="drawerArrowStyle">@style/DrawerArrowStyle</item>
    </style>

    <style name="DrawerArrowStyle" parent="Widget.AppCompat.DrawerArrowToggle">
        <item name="spinBars">true</item>
        <item name="color">@color/txt</item>
    </style>

    <style name="spinner_style" parent="@android:style/Theme.Holo">
        <item name="android:paddingLeft">10dp</item>
        <item name="android:paddingRight">10dp</item>
        <item name="android:paddingTop">5dp</item>
        <item name="android:paddingBottom">5dp</item>
        <item name="android:layout_width">140dp</item>
        <item name="android:layout_height">50dp</item>
    </style>
</resources>
